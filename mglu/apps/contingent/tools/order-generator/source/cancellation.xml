<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<order classname="CancellationOrder">

	<template entity="order">

		<classifier type="study_type" title="Форма (основа) обучения" />

	</template>

	<template entity="student">
		<input type="document" name="agreement" title="Договор/контракт" />
		
		<select type="int" name="basics" title="Основания приказа">
			<option value="1" title="Л/з студента с визой декана и резолюцией проректора; подтверждающие документы" />
			<option value="2" title="Л/з студента с визой декана и резолюцией проректора" />
			<option value="3" title="Служебная записка декана с резолюцией проректора" />
			<option value="4" title="Служебная записка декана ФОИГ с резолюцией проректора" />
			<option value="5" title="Л/з студента с визой декана, декана ФОИГ и резолюцией проректора; подтверждающие документы" />
			<option value="6" title="Л/з студента с визой декана, декана ФОИГ и резолюцией проректора" />
			<option value="7" title="Служебная записка декана с визой декана ФОИГ с резолюцией проректора" />
		</select>
	</template>

